# SIMCO Backend Environment Variables

# Application Settings
APP_NAME=SIMCO - Cognitive Evaluation System
DEBUG=true

# Ollama LLM Configuration
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_MODEL=mistral
OLLAMA_TIMEOUT=120

# CORS Origins (comma-separated)
CORS_ORIGINS=http://localhost:5173,http://localhost:3000

# ML Models
ML_MODELS_PATH=data/models
USE_ML_MODELS=true

# Data Collection
TRAINING_DATA_PATH=data/training
AUTO_COLLECT_DATA=true

# Session Management
SESSION_TIMEOUT=3600

# Quiz Settings
DEFAULT_QUIZ_LENGTH=10
DEFAULT_TIME_LIMIT=1200

# Behavioral Analysis
WEBCAM_ENABLED=true
BLINK_RATE_THRESHOLD=30.0
HEAD_MOVEMENT_THRESHOLD=5.0
GAZE_STABILITY_THRESHOLD=0.6
